@startuml

start
:点击修改订单信息按钮;
if(logisiticsShopOption 已存在?) then (yes)
  :从localStorage中获取店铺(logisiticsShopOption)下拉选项;
else (no)
  :请求"/option/shop-list"接口;
  if(请求 成功?) then (yes)
    :本地存储logisiticsShopOption;
  else (no)
    :提示出错信息;
    stop
  endif
endif
if(logisiticsPlatformOption 已存在?) then (yes)
  :从localStorage中获取平台(logisiticsPlatformOption)下拉选项;
else (no)
  :请求"/option/platform-list"接口;
  if(请求 成功?) then (yes)
    :本地存储logisiticsPlatformOption;
  else (no)
    :提示出错信息;
    stop
  endif
endif
:弹出修改订单弹窗;
:输入要修改的订单号，请求"option/order-list"接口;
 if(请求 成功?) then (yes)
    :实时展示包含输入的字符串的订单下拉列表;
    :选定某一个订单号;
    :请求"/order/detail"接口;
    if(请求 成功?) then (yes)
      :将返回的数据赋给对应的表单项;
      repeat
        :更改数据;
      repeat while(表单校验 通过?) is (no) not (yes)
      note right
        校验规则伪代码
        ====
        //允许数字，中划线
        let reg = new RegExp
        ("^[0-9-]+$")
      end note
    else (no)
      :提示出错信息;
      stop
    endif
  else (no)
    :提示出错信息;
    stop
  endif
:请求"/order/update"接口;
if(请求 成功?) then (yes)
  :提示更新成功;
  :关闭弹窗;
else (no)
  :提示出错信息;
endif
end

@enduml